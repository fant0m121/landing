// Normalize Styles
@import '../../node_modules/normalize.css/normalize.css';

// Import Modules
@import '../_modules/link/link';

@import '_fonts';
@import '_variable';
@import 'heading';
@import 'button';

// Components
@import 'grid/mixins/helpers'
@import 'grid/mixins/grid-framework'
@import 'grid/mixins/bem'
@import 'grid/components/col'
@import 'grid/components/grid'
@import 'grid/components/row'
@import 'grid/components/text'

init($breakpoints, $columns)

// Box sizing partial styles
// Apply a natural box layout model to all elements
*,
*:before,
*:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

.yeogurt-info
  text-align center
  max-width 500px
  margin-left auto
  margin-right auto

.version
  font-size 14px
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  position absolute
  bottom 10px
  right 10px

.logo
  margin-top 15px

// Styling on warning for users on IE7 or below
.browsehappy
  text-align center
  margin 0
  background #fff8e2
  color black
  padding 0.5em 0

.ui-header
  padding 44px 0
  position fixed
  width 100%
  top 0
  right 0
  left 0
  z-index 10

  a
    color $color-white
    text-decoration none

  &__logo
    font-size 30px
    font-family $font-systopie

  &__trial
    font-size 14px
    font-family $font-proxima-nova
    font-weight bold
    text-transform uppercase

.ui-menu
  display flex
  font-size 14px
  font-family $font-default

  &__item + &__item
    padding-left 38px

.ui-footer
  padding 30px 0 80px
  color $color-gray
  font-family $font-default
  font-size 12px
  line-height 18px

  &__logo
    a
      color $color-dark-jungle-green
      font-size 24px
      font-family 'Systopie'
      line-height 18px
      text-decoration none

    span
      color $color-blue-de-france

  &__copyright
    padding-top 18px

  &__info
    a
      color $color-blue-de-france

.ui-home-main
  background $color-medium-slate-blue
  padding 170px 0 17px
  position relative

  &:after
    position absolute
    content url('/images/main-stat.png')
    bottom 0
    right 25%
    font-size 0
    margin-left -222px

  &:before
    position absolute
    content ''
    background url("/images/main-bg.png") no-repeat right bottom
    background-size cover
    top 0
    bottom -75px
    left 0
    font-size 0
    width 65%
    z-index 1

  &__container
    position relative
    z-index 2

  &__heading
    color white
    font-family $font-proxima-nova
    font-weight bold
    font-size 34px
    line-height 54px

  &__text
    font-size 16px
    color white
    line-height 24px
    font-family $font-default
    margin-top 50px

  &__button
    margin-top 60px

.ui-home-advantages
  padding 200px 0 90px

.ui-home-advantage
  &__heading
    font-family $font-proxima-nova
    font-size 30px
    line-height 45px
    color black
    position relative
    padding-bottom 20px

    &:before
      content ''
      width 60px
      left 0
      bottom 0
      height 2px
      background $color-blue-de-france
      position absolute

  &__text
    font-family $font-default
    font-size 14px
    color $color-taupe
    text-align left
    line-height 21px
    margin-top 20px

  &__image
    font-size 0
    text-align center

    img
      max-width 100%

.ui-home-advantage + .ui-home-advantage
  padding-top 110px

.ui-home-info
  background $color-munsell
  padding 65px 0 55px

  &__content
    background url('/images/info-bg.png') 50% 50% no-repeat
    padding 40px 0
    background-size contain

  &__button
    padding-top 30px

  &__item
    &--flex
      display flex

    &--result
      padding-top 138px

    &--stat
      padding-top 64px
      margin-left -70px

      .ui-home-info__item-icon
        margin-right 13px

  &__item-content
    flex 1
    padding-left 13px

  &__item-value
    font-family $font-fira
    font-weight 300
    font-size 72px
    color $color-blue-de-france
    line-height 24px

    span
      font-size 30px

  &__item-value + &__item-title
    padding-top 18px

  &__item-title
    font-family $font-default
    font-size 14px
    color $color-blue-de-france
    line-height 24px
    text-transform uppercase
    font-weight bold

  &__item-title + &__item-text
    padding-top 18px

  &__item-title + &__item-value
    padding-top 28px

  &__item-text
    font-family $font-default
    font-size 16px
    color $color-dark-jungle-green
    line-height 24px

  &__item-text + &__item-title
    padding-top 18px

  &__item-text + &__item-footer
    padding-top 18px

  &__item-footer
    color $color-blue-de-france
    font-family $font-default
    font-size 30px
    line-height 24px

.ui-home-work
  padding 65px 0 55px

  &__item
    padding 110px 0 70px
    position relative

    &:before
      content ''
      width 60px
      left calc(50% - 30px)
      bottom 0
      height 2px
      background $color-blue-de-france
      position absolute

  &__text
    padding 40px 0

.ui-home-work-item
  font-family $font-default
  line-height 24px
  position relative

  &__icon
    height 70px
    display flex
    justify-content center
    align-items center

  &__icon + &__description
    padding-top 26px

  &__description
    font-family $font-default
    color $color-dark-jungle-green

  &__time
    font-size 14px
    color $color-dim-gray

.ui-home-work-item + .ui-home-work-item:before
  content url('/images/arrow-right.png')
  position absolute
  left -10px
  top 26px

.ui-home-work-text
  font-family $font-default
  font-size 16px
  color $color-dark-jungle-green
  line-height 24px

.ui-home-work-text + .ui-home-work-text
  padding-top 40px
