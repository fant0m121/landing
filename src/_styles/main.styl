// Normalize Styles
@import '../../node_modules/normalize.css/normalize.css';

// Import Modules
@import '../_modules/link/link';

@import '_fonts';
@import '_variable';
@import 'grid/mixins/helpers'
@import 'grid/mixins/grid-framework'
@import 'grid/mixins/bem'

// Components
@import 'grid/components/col'
@import 'grid/components/grid'
@import 'grid/components/row'
@import 'grid/components/text'

init($breakpoints, $columns)

// Box sizing partial styles
// Apply a natural box layout model to all elements
*,
*:before,
*:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

.yeogurt-info
  text-align center
  max-width 500px
  margin-left auto
  margin-right auto

.version
  font-size 14px
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  position absolute
  bottom 10px
  right 10px

.logo
  margin-top 15px

// Styling on warning for users on IE7 or below
.browsehappy
  text-align center
  margin 0
  background #fff8e2
  color #000
  padding 0.5em 0

.ui-header
  padding 44px 0
  background $color-medium-slate-blue

  a
    color $color-white
    text-decoration none

  &__logo
    font-size 30px

  &__trial
    font-size 14px
    text-transform uppercase

.ui-menu
  display flex
  font-size 14px
  font-family $font-default

  &__item + &__item
    padding-left 38px

.ui-footer
  color $color-gray
  font-family $font-default
  font-size 12px
  line-height 18px

  &__logo
    a
      color $color-dark-jungle-green
      font-size 24px
      font-family 'Systopie'
      line-height 18px
      text-decoration none

    span
      color $color-bleu-de-france

  &__copyright
    padding-top 18px

  &__info
    a
      color $color-bleu-de-france
